#!/usr/bin/php
<?php
namespace Brain\Games\Cli;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}
use function cli\line;
use function cli\prompt;
line('Welcome to the Brain Game!');
$name = prompt('May I have your name?');
line("Hello, %s!", $name);
line('What is the result of the expression?');

function gameCalc()
{
    global $name;
    $sign = ['+', '-', '*'];
    $i = rand(0,2);
    $randomSing = $sign[$i];
    $num = rand(0,99);
    $num2 = rand(0,99);
    $sum = $num + $num2;
    $dif = $num - $num2;
    $mult = $num * $num2;
    line("Question: %s", $num . $randomSing . $num2);
    $answer = prompt('Your answer: ');

    if ($randomSing === '+' && $answer == $sum) {
        line('Correct!');
        return true;
    } elseif ($randomSing === '-' && $answer == $dif) {
        line('Correct!');
        return true;
    } elseif ($randomSing === '*' && $answer == $mult) {
        line('Correct!');
        return true;
    } elseif ($randomSing === '+' && $answer !== $sum) {
        line ("'%s' is wrong answer ;(. Correct answer was $sum", $answer);
        line("Let's try again, %s!", $name);
        return false;
    } elseif ($randomSing === '-' && $answer !== $dif) {
        line("'%s' is wrong answer ;(. Correct answer was $dif", $answer);
        line("Let's try again, %s!", $name);
        return false;
    } elseif ($randomSing === '*' && $answer !== $mult) {
        line("'%s' is wrong answer ;(. Correct answer was $mult", $answer);
        line("Let's try again, %s!", $name);
        return false;
    }
}
function IsevenRepeat()
{
    global $name;
    if (gameCalc() === true) {
        gameCalc() === true ? (gameCalc() === true ? line("Congratulations, %s!", $name) : false) : false;
    } else {
        return false;
    }
}
IsevenRepeat();
